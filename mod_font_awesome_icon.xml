                </field>
                <field name="icon4_icon" type="text"  default="joomla" label="Icon Name" description="ICON_TYPE_DESC"></field>
                <field name="icon4_url" type="text" default="#" label="URL" description="ICON_TYPE_URL"></field>
                <field name="icon4_color" type="color" default="" label="Color" description="Color of Icon" />
                
                <field type="spacer" name="icon5" label="&lt;h4&gt;Icon 5&lt;/h4&gt;&lt;hr/&gt;" />                
                <field name="icon5_enable" type="radio"  class="btn-group btn-group-yesno" default="0" 
                       label="Show/Hide this icons" description="Enable/Disable icons">
