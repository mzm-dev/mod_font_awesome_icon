                </field>
                <field name="icon5_icon" type="text"  default="joomla" label="Icon Name" description="ICON_TYPE_DESC"></field>
                <field name="icon5_url" type="text" default="#" label="URL" description="ICON_TYPE_URL"></field>
                <field name="icon5_color" type="color" default="" label="Color" description="Color of Icon" />
                
                <field type="spacer" name="icon6" label="&lt;h4&gt;Icon 6&lt;/h4&gt;&lt;hr/&gt;" />                
                <field name="icon6_enable" type="radio"  class="btn-group btn-group-yesno" default="0" 
                       label="Show/Hide this icons" description="Enable/Disable icons">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="icon6_icon" type="text"  default="joomla" label="Icon Name" description="ICON_TYPE_DESC"></field>
                <field name="icon6_url" type="text" default="#" label="URL" description="ICON_TYPE_URL"></field>
                <field name="icon6_color" type="color" default="" label="Color" description="Color of Icon" />
                
                <field type="spacer" name="icon7" label="&lt;h4&gt;Icon 7&lt;/h4&gt;&lt;hr/&gt;" />                
                <field name="icon7_enable" type="radio"  class="btn-group btn-group-yesno" default="0" 
                       label="Show/Hide this icons" description="Enable/Disable icons">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="icon7_icon" type="text"  default="joomla" label="Icon Name" description="ICON_TYPE_DESC"></field>
                <field name="icon7_url" type="text" default="#" label="URL" description="ICON_TYPE_URL"></field>
                <field name="icon7_color" type="color" default="" label="Color" description="Color of Icon" />
                
                <field type="spacer" name="icon8" label="&lt;h4&gt;Icon 8&lt;/h4&gt;&lt;hr/&gt;" />                
                <field name="icon8_enable" type="radio"  class="btn-group btn-group-yesno" default="0" 
                       label="Show/Hide this icons" description="Enable/Disable icons">
                    <option value="1">Show</option>
                    <option value="0">Hide</option>
                </field>
                <field name="icon8_icon" type="text"  default="joomla" label="Icon Name" description="ICON_TYPE_DESC"></field>
                <field name="icon8_url" type="text" default="#" label="URL" description="ICON_TYPE_URL"></field>
                <field name="icon8_color" type="color" default="" label="Color" description="Color of Icon" />
                
            </fieldset>
        </fields>
    </config>
</extension>
